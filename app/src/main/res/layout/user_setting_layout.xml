<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/user_toolbar"

        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
         />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">
        <net.steamcrafted.materialiconlib.MaterialIconView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="24dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:materialIcon="account"
            app:materialIconColor="#ADADAD"
            app:materialIconSize="24dp"
            android:scaleType="center"

            android:id="@+id/icon"
        />
        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:paddingBottom="16dp"
                android:id="@+id/user_name"
                android:hint="姓名"/>
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"

        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <net.steamcrafted.materialiconlib.MaterialIconView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="24dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:materialIcon="gender_male"
                app:materialIconColor="#ADADAD"
                app:materialIconSize="24dp"
                android:scaleType="center"


                />
            <com.gc.materialdesign.views.CheckBox
                android:id="@+id/checkboxMan"
                android:layout_width="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_height="wrap_content"
                android:background="#1E88E5"
                materialdesign:check="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              android:textSize="16sp"
                android:layout_marginTop="26dp"
                android:text="男"/>
            <com.gc.materialdesign.views.CheckBox
                android:id="@+id/checkboxWomen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#1E88E5"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="14dp"
                materialdesign:check="false"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:textSize="16sp"
                android:text="女"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        >
        <net.steamcrafted.materialiconlib.MaterialIconView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="24dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:materialIcon="cake_variant"
            app:materialIconColor="#ADADAD"
            app:materialIconSize="24dp"
            android:scaleType="center"


            />
        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:paddingBottom="16dp"
                android:id="@+id/birthday"
                android:hint="破壳日"/>
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="8dp"

        android:orientation="horizontal">

        <net.steamcrafted.materialiconlib.MaterialIconView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="24dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:materialIcon="email"
            app:materialIconColor="#ADADAD"
            app:materialIconSize="24dp"
            android:scaleType="center"


            />
        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:paddingBottom="16dp"
                android:id="@+id/email"
                android:inputType="textEmailAddress"
                android:hint="邮箱"/>
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <net.steamcrafted.materialiconlib.MaterialIconView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="24dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:materialIcon="account_card_details"
            app:materialIconColor="#ADADAD"
            app:materialIconSize="24dp"
            android:scaleType="center"


            />
        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:paddingBottom="16dp"
                android:id="@+id/introduce"
                android:hint="个人介绍"/>
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>
    </LinearLayout>
</LinearLayout>